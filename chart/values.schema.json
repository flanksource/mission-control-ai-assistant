{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "config": {
      "additionalProperties": false,
      "description": "Non-secret configuration provided as environment variables.",
      "properties": {
        "logLevel": {
          "default": "INFO",
          "description": "Logging level (DEBUG, INFO, WARN, ERROR).",
          "required": [],
          "title": "logLevel"
        }
      },
      "required": [],
      "title": "config"
    },
    "global": {
      "description": "Global values are values that can be accessed from any chart or subchart by exactly the same name.",
      "required": [],
      "title": "global",
      "type": "object"
    },
    "image": {
      "additionalProperties": false,
      "description": "Image settings for the deployment.",
      "properties": {
        "pullPolicy": {
          "default": "IfNotPresent",
          "description": "Image pull policy.",
          "required": [],
          "title": "pullPolicy"
        },
        "repository": {
          "default": "ghcr.io/flanksource/mission-control-ai-assistant",
          "description": "Image repository for the deployment.",
          "required": [],
          "title": "repository"
        },
        "tag": {
          "default": "1.0.4",
          "description": "Image tag for the deployment.",
          "required": [],
          "title": "tag"
        }
      },
      "required": [],
      "title": "image"
    },
    "llm": {
      "additionalProperties": false,
      "properties": {
        "model": {
          "default": "claude-haiku-4-5",
          "description": "LLM model for the selected provider.",
          "required": [],
          "title": "model"
        },
        "provider": {
          "default": "anthropic",
          "description": "LLM provider: anthropic or openai.",
          "required": [],
          "title": "provider"
        },
        "secretKey": {
          "default": "ANTHROPIC_API_KEY",
          "description": "Key name for the provider API key in the secret.",
          "required": [],
          "title": "secretKey"
        },
        "secretName": {
          "default": "",
          "description": "Secret name containing the provider API key.",
          "required": [],
          "title": "secretName"
        }
      },
      "required": [],
      "title": "llm",
      "type": "object"
    },
    "mcp": {
      "additionalProperties": false,
      "properties": {
        "bearerTokenKey": {
          "default": "MCP_BEARER_TOKEN",
          "description": "Key name for MCP_BEARER_TOKEN in the secret.",
          "required": [],
          "title": "bearerTokenKey"
        },
        "secretName": {
          "default": "",
          "description": "Secret name containing MCP_URL and MCP_BEARER_TOKEN.",
          "required": [],
          "title": "secretName"
        },
        "urlKey": {
          "default": "MCP_URL",
          "description": "Key name for MCP_URL in the secret.",
          "required": [],
          "title": "urlKey"
        }
      },
      "required": [
        "secretName"
      ],
      "title": "mcp",
      "type": "object"
    },
    "resources": {
      "additionalProperties": false,
      "description": "Pod resource requests/limits.",
      "properties": {
        "limits": {
          "additionalProperties": false,
          "properties": {
            "memory": {
              "default": "200Mi",
              "title": "memory",
              "type": "string"
            }
          },
          "required": [
            "memory"
          ],
          "title": "limits",
          "type": "object"
        },
        "requests": {
          "additionalProperties": false,
          "properties": {
            "cpu": {
              "default": "5m",
              "title": "cpu",
              "type": "string"
            },
            "memory": {
              "default": "50Mi",
              "title": "memory",
              "type": "string"
            }
          },
          "required": [
            "cpu",
            "memory"
          ],
          "title": "requests",
          "type": "object"
        }
      },
      "required": [
        "requests",
        "limits"
      ],
      "title": "resources"
    },
    "slack": {
      "additionalProperties": false,
      "description": "Secret references for Slack/LLM/MCP credentials.",
      "properties": {
        "appTokenKey": {
          "default": "SLACK_APP_TOKEN",
          "description": "Key name for SLACK_APP_TOKEN in the secret.",
          "required": [],
          "title": "appTokenKey"
        },
        "botTokenKey": {
          "default": "SLACK_BOT_TOKEN",
          "description": "Key name for SLACK_BOT_TOKEN in the secret.",
          "required": [],
          "title": "botTokenKey"
        },
        "secretName": {
          "default": "",
          "description": "Secret name containing Slack tokens.",
          "required": [],
          "title": "secretName"
        }
      },
      "required": [
        "secretName"
      ],
      "title": "slack"
    }
  },
  "required": [
    "slack",
    "llm",
    "mcp"
  ],
  "type": "object"
}